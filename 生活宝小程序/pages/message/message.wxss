/* 消息 */
/* 设置页面背景颜色 */
page {
    background-color: #F1F1F1;
}

.card {
    display: flex;
    flex-direction: column;
    margin: 60rpx 20rpx;
    background-color: #fff;
    border: 1rpx solid #fff;
    border-radius: 10rpx;
    padding: 20rpx;
}

/* 设置消息标题 */
.card .card-title {
    font-size: 18px;
    margin-bottom: 10rpx;
    color: #242424;
}

/* 设置消息卡片的时间 */
.card .card-data {
    color: #C8C8C8;
    font-size: 14px;
    padding-bottom: 15rpx;
    border-bottom: 1rpx solid #E8E8E8;
    margin-bottom: 15rpx;
}

/* 设置消息卡片的图片 */
.card image {
    width: 100%;
    height: 300rpx;
}

.card .card-desc {
    margin: 15rpx 0;
    border-bottom: 1rpx solid #E8E8E8;
    padding-bottom: 15rpx;
    font-size: 16px;
    color: #4D4D4D;
}

.card .card-read {
    color: #7B7B7B;
    font-size: 15px;
}